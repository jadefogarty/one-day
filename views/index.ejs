<!DOCTYPE html>
<html lang="en">

<head>
    <title> One Day Project </title>
    <!-- custom css -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- custom js -->
    <script src="/js/script.js"></script>

</head>

<body>

    <div class="container-fluid justify-content-center align-items-center" id="wrapper">
        <!-- header  -->
        <div class="row ">
            <div class="header align-items-center">
                <div class="header-img">
                    <img src="images/logo.jpg" alt="logo" heignt="130px" width="130px">
                </div>

                <div class="header-title">
                    <h1>One Day Project</h1>
                </div>
            </div>

        </div>

        <!-- main content -->
        <div class="container content">
            <div class="row">

                

                    <div class="row">
                        <form action="/date" method="get"> 
                            <label class="dateLabel" for="selectDate"> Select date: </label>
                            <input class="dateInput" type="date" id="selectedDate" name="Date" max=""  required>
                            <button type="submit" class="btn"> Submit </button>
                        </form>
                    </div>


                    <div class="row">
                        <div class="row">
                            

                            <% if (nasaData) { %>
                                <h2>Astronomy Picture Of the Day</h2>
                                <div class="">
                                    <h3><%= nasaData.title %></h3>
                                    <p> <%= nasaData.date %> </p>
                                    <img src="<%= nasaData.url %>" alt="image from NASA">
                                    <p> <%= nasaData.explanation %> </p>
                                </div>
                                <% } %>
                        </div>
                        <div class="row">
                            <% if (mlData) { %>
                            <div class="col-sm">
                            
                            <div class="">
                                
                                <h3>Events: </h3>
                                <% for(let i=-0; i < mlData.data.Events.length ; i++) {%>
                                    <p><%= mlData.data.Events[i].text; %></p>
                                    <p><%= mlData.data.Events[i].year; %></p>
                                    <!-- <p><%= mlData.data.Events[i].no_year_html; %></p> -->
                                <% } %>
                                
                            </div>
                            
                        </div>

                        <div class="col-sm">
                            <div class="">
                                <h3>Births: </h3>
                                <% for(let i=-0; i < mlData.data.Births.length ; i++) {%>
                                    <p><%= mlData.data.Births[i].text; %></p>
                                    <p><%= mlData.data.Births[i].year; %></p>
                                    <!-- <p><%= mlData.data.Births[i].no_year_html; %></p> -->
                                <% } %>
                                
                            </div>
                        </div>

                        <div class="col-sm">
                            <div class="">
                                <h3>Deaths: </h3>
                                <% for(let i=-0; i < mlData.data.Deaths.length ; i++) {%>
                                    <p><%= mlData.data.Deaths[i].text; %></p>
                                    <p><%= mlData.data.Deaths[i].year; %></p>
                                    <!-- <p><%= mlData.data.Deaths[i].no_year_html; %></p> -->
                                <% } %>
                                
                            </div>


                        </div>
                        <% } %>
                    </div>
                    </div>
                


            </div>

        </div>

</body>

</html>