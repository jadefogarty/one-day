<!DOCTYPE html>
<html lang="en">

<head>
    <title> One Day Project </title>
    <!-- favicon -->
    <link rel="icon" type="image/x-icon" href="images/logo.png">
    <!-- custom css -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- custom js -->
    <script src="/js/script.js"></script>

</head>

<body>

    <div class="container-fluid justify-content-center align-items-center" id="wrapper">
        <!-- header  -->
        <div class="container">
            <div class="row ">
                <div class="header align-items-center">
                    <div class="header-img">
                        <img src="images/logo.png" alt="logo" heignt="70px" width="70px">
                    </div>

                    <div class="header-title">
                        <h1>One Day Project</h1>
                    </div>
                </div>

            </div>
        </div>

        <!-- main content -->
        <div class="container content">
            <div class="row content-row">

                <div id="page-divider">

                </div>


                <div class="row form-row">
                    <form action="/date" method="get" class="date-form">
                        <label class="dateLabel" for="selectDate"> Select date: </label>
                        <input class="dateInput" type="date" id="selectedDate" name="Date" max="" required>
                        <button type="submit" class="submit-btn"> Submit </button>
                    </form>
                </div>


                <div class="row data-row">
                    <div class="container nasa-data">



                        <% if (nasaData) { %>
                            <div id="page-divider">

                            </div>
                            <h3>Astronomy Picture Of the Day</h3>
                            <div class="nasa-data">
                                <h5>
                                    <%= nasaData.title %>
                                </h5>
                                <p>Date: <%= nasaData.date %>
                                </p>
                                <div class="nasa-img-div">
                                    <img src="<%= nasaData.url %>" alt="image from NASA" class="nasa-img">
                                </div>
                                <p>
                                    <%= nasaData.explanation %>
                                </p>
                            </div>
                            <% } %>
                    </div>
                    <div class="row">

                        <% if (mlData) { %>

                            <div id="page-divider">

                            </div>
                            <h3> This Date in Previous Years</h3>
                            <div class="col-sm">

                                <h3>Events: </h3>
                                <div class="card-deck ml-card-deck">

                                    <% for(let i=-0; i < mlData.data.Events.length ; i++) {%>
                                        <div class="card" id="ml-card">
                                            <div class="card-body">
                                                <h6>Year: <%= mlData.data.Events[i].year; %>
                                                </h6>
                                                <p>
                                                    <%= mlData.data.Events[i].text; %>
                                                </p>

                                                <!-- <p><%= mlData.data.Events[i].no_year_html; %></p> -->

                                            </div>
                                        </div>
                                        <% } %>

                                </div>

                            </div>

                            <div class="col-sm">
                                <h3>Births: </h3>
                                <div class="card-deck ml-card-deck">

                                    <% for(let i=-0; i < mlData.data.Births.length ; i++) {%>
                                        <div class="card" id="ml-card">
                                            <div class="card-body">
                                                <h6>Year: <%= mlData.data.Births[i].year; %>
                                                </h6>
                                                <p>
                                                    <%= mlData.data.Births[i].text; %>
                                                </p>

                                                <!-- <p><%= mlData.data.Births[i].no_year_html; %></p> -->

                                            </div>
                                        </div>
                                        <% } %>

                                </div>
                            </div>

                            <div class="col-sm">
                                <h3>Deaths: </h3>
                                <div class="card-deck ml-card-deck">

                                    <% for(let i=-0; i < mlData.data.Deaths.length ; i++) {%>
                                        <div class="card" id="ml-card">
                                            <div class="card-body">
                                                <h6>Year: <%= mlData.data.Deaths[i].year; %>
                                                </h6>
                                                <p>
                                                    <%= mlData.data.Deaths[i].text; %>
                                                </p>

                                                <!-- <p><%= mlData.data.Deaths[i].no_year_html; %></p> -->

                                            </div>
                                        </div>
                                        <% } %>

                                </div>


                            </div>
                            <% } %>
                    </div>
                    <div class="row">
                        <% if (tmdbData) { %>

                            <div id="page-divider">

                            </div>
                            <h3> Movies Released on this Day</h3>
                            <div class="card-deck tmdb-card-deck">
                            <% for(let i=-0; i < 6 ; i++) {%>
                                <div class="card" id="tmdb-card">
                                    <div class="card-body">
                                        <p><%= tmdbData.results[i].title; %> </p>
                                    </div>
                                </div>
                                <% } %>

                            </div>

                            <% }%>

                    </div>
                </div>



            </div>

        </div>

</body>

</html>